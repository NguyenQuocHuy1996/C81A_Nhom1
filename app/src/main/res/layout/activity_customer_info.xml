<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CustomerInfoActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorSecondary"
        android:text="Thông tin giao hàng"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/spacing"
        android:paddingRight="@dimen/spacing"
        >
    </TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/spacing"
        android:paddingRight="@dimen/spacing"
        android:paddingTop="@dimen/spacing_haft"
        android:paddingBottom="@dimen/spacing_haft"
        >
        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Họ và tên: "
            android:textStyle="bold"
            android:textSize="@dimen/content"
            android:layout_marginRight="@dimen/spacing_triple"
            android:gravity="center_vertical"
            >
        </TextView>
        <EditText
            android:id="@+id/edtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content"
            android:gravity="center_vertical"
            android:hint="Nhập họ và tên..."
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/spacing"
        android:paddingRight="@dimen/spacing"
        android:paddingTop="@dimen/spacing_haft"
        android:paddingBottom="@dimen/spacing_haft"
        >
        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Số điện thoại: "
            android:textStyle="bold"
            android:textSize="@dimen/content"
            android:layout_marginRight="@dimen/spacing_triple"
            android:gravity="center_vertical"
            >
        </TextView>
        <EditText
            android:id="@+id/edtPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content"
            android:gravity="center_vertical"
            android:hint="Nhập số điện thoại..."
            >
        </EditText>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:paddingLeft="@dimen/spacing"
        android:paddingRight="@dimen/spacing"
        android:paddingTop="@dimen/spacing_haft"
        android:paddingBottom="@dimen/spacing_haft"
        >
        <TextView
            android:layout_width="105dp"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:textStyle="bold"
            android:textSize="@dimen/content"
            android:layout_marginRight="@dimen/spacing_triple"
            android:gravity="center_vertical"
            >
        </TextView>
        <EditText
            android:id="@+id/edtAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/content"
            android:gravity="center_vertical"
            android:hint="Nhập địa chỉ..."
            >
        </EditText>
    </LinearLayout>
    <Button
        android:id="@+id/btnPayment"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_double"
        android:background="@color/colorSemiPrimary"
        android:drawablePadding="12dp"
        android:text="Tiếp tục thanh toán"
        android:textColor="#fff"
        android:layout_marginTop="@dimen/spacing_haft"
        android:textSize="@dimen/content"
        android:layout_marginLeft="@dimen/spacing"
        android:layout_marginRight="@dimen/spacing"
        android:layout_marginBottom="@dimen/spacing_double"
        />
</LinearLayout>